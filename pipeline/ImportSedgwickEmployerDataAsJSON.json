{
	"name": "ImportSedgwickEmployerDataAsJSON",
	"properties": {
		"description": "Import Sedgwick Employer Data from XML data source file; convert it to JSON file in the Azure BLOB storage then import it to the PolarisEtl ASD.",
		"activities": [
			{
				"name": "CopyJSONToASD",
				"description": "Copy JSON To ASD",
				"type": "Copy",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "BlobSource",
						"recursive": true
					},
					"sink": {
						"type": "SqlSink",
						"writeBatchSize": 10000,
						"sqlWriterStoredProcedureName": "master.uspImportSedgwickEmployerData",
						"sqlWriterTableType": "master.udttSedgwickEmployerData",
						"storedProcedureParameters": {
							"SourceXmlFileName": {
								"type": "String",
								"value": {
									"value": "@pipeline().parameters.SourceFileName",
									"type": "Expression"
								}
							},
							"TestMode": {
								"type": "Byte",
								"value": "0"
							}
						}
					},
					"enableStaging": false,
					"dataIntegrationUnits": 0,
					"translator": {
						"value": "@pipeline().parameters.DataMappingStructure",
						"type": "Expression"
					}
				},
				"inputs": [
					{
						"referenceName": "SedgwickEmployerDataSourceAsJSON",
						"type": "DatasetReference",
						"parameters": {
							"SourceFileName": {
								"value": "@pipeline().parameters.SourceFileName",
								"type": "Expression"
							},
							"SourceFolderName": {
								"value": "@pipeline().parameters.SourceFolderName",
								"type": "Expression"
							},
							"Structure": {
								"value": "@pipeline().parameters.SourceDataStructure",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "PolarisEtlASD",
						"type": "DatasetReference",
						"parameters": {
							"Structure": {
								"value": "@pipeline().parameters.SinkDataStructure",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"SourceFileName": {
				"type": "String",
				"defaultValue": "SedgwickClaimListExample.json"
			},
			"SourceFolderName": {
				"type": "String",
				"defaultValue": "employer/inputJSON"
			},
			"SourceDataStructure": {
				"type": "String",
				"defaultValue": [
					{
						"name": "Name",
						"type": "String",
						"description": "Employer Name"
					},
					{
						"name": "FEIN",
						"type": "String",
						"description": "Employer FEIN"
					},
					{
						"name": "UniqueId",
						"type": "String",
						"description": "Employer Unique ID"
					},
					{
						"name": "AddrLine1",
						"type": "String",
						"description": "Address line 1"
					},
					{
						"name": "AddrLine2",
						"type": "String",
						"description": "Address line 2"
					},
					{
						"name": "City",
						"type": "String",
						"description": "City"
					},
					{
						"name": "State",
						"type": "String",
						"description": "State"
					},
					{
						"name": "Zip",
						"type": "String",
						"description": "Zip"
					},
					{
						"name": "Country",
						"type": "String",
						"description": "Country"
					}
				]
			},
			"SinkDataStructure": {
				"type": "String",
				"defaultValue": [
					{
						"name": "EmployerName",
						"type": "String",
						"description": "Employer Name"
					},
					{
						"name": "EmployerFEIN",
						"type": "String",
						"description": "Employer FEIN"
					},
					{
						"name": "EmployerUniqueId",
						"type": "String",
						"description": "Employer Unique ID"
					},
					{
						"name": "EmployerAddressLine1",
						"type": "String",
						"description": "Address line 1"
					},
					{
						"name": "EmployerAddressLine2",
						"type": "String",
						"description": "Address line 2"
					},
					{
						"name": "EmployerCity",
						"type": "String",
						"description": "City"
					},
					{
						"name": "EmployerState",
						"type": "String",
						"description": "State"
					},
					{
						"name": "EmployerZip",
						"type": "String",
						"description": "Zip"
					},
					{
						"name": "EmployerCountry",
						"type": "String",
						"description": "Country"
					}
				]
			},
			"DataMappingStructure": {
				"type": "String",
				"defaultValue": {
					"type": "TabularTranslator",
					"columnMappings": {
						"Name": "EmployerName",
						"FEIN": "EmployerFEIN",
						"UniqueId": "EmployerUniqueId",
						"AddrLine1": "EmployerAddressLine1",
						"AddrLine2": "EmployerAddressLine2",
						"City": "EmployerCity",
						"State": "EmployerState",
						"Zip": "EmployerZip",
						"Country": "EmployerCountry"
					}
				}
			}
		}
	}
}